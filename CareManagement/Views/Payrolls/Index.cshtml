<form action="@Url.Action("Index", "Controller")" method="get">
    <div class="form-group">
        <label for="employeeId">Employee ID:</label>
        <select name="employeeId" class="form-control">
            <option value="">-- Select Employee --</option>
            @foreach (var employee in ViewBag.EmployeeId)
            {
                <option value="@employee.EmployeeId">@employee.FirstNameLastName</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label for="startDate">Start Date:</label>
        <select name="startDate" class="form-control">
            <option value="">-- Select Start Date --</option>
            @foreach (var period in ViewBag.TwoWeekPeriods)
            {
                <option value="@period">@period</option>
            }
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>
