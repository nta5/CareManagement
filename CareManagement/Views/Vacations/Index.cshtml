@model IEnumerable<CareManagement.Models.OM.Vacation>

@{
    ViewData["Title"] = "Index";
}

<h1>Vacations</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Employee)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StartDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EndDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VacationRequest)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Employee.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VacationRequest)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.VacationId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.VacationId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.VacationId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
